                            </svg>
                        </div>
                        <p class="text-tertiary w-200 fw-bold">On time Delivery</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="blog">
        <div class="blog-single gray-bg">
            <div class="container">
                <div class="row align-items-start">
                    <div class="col-lg-8">
                        <article class="article">
                            <div class="article-img">
                                <img src="{{ asset('uploads/product/') }}{{ product.productMedia[0].image }}" title="" alt="">
                            </div>

                            <div class="key-features">
                                <h2>Features</h2>
                                {{ product.keyFeatures | raw }}
                            </div>

                            <div class="applications">
                                <h2>Applications</h2>
                                {{ product.applications | raw }}
                            </div>
                            <div class="why-choose-us">
                                <h2>Why Choose Us</h2>
                                {{ product.whyChooseus | raw }}
                            </div>
                        </article>



                    </div>
                    <div class="col-lg-4 m-15px-tb blog-aside">

                        <div class="widget widget-post">
                            <div class="widget-title">
                                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

                                <div class="row">
                                    <div class="col-md-6 col-sm-12">
                                        <div class="mb-3">
                                            <label for="firstname" class="form-label">{{ form_label(form.firstname) }}</label>
                                            {{ form_widget(form.firstname, {'attr': {'class': 'form-control', 'id': 'firstname', 'required': true}}) }}
                                            {{ form_errors(form.firstname) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="mb-3">
                                            <label for="lastname" class="form-label">{{ form_label(form.lastname) }}</label>
                                            {{ form_widget(form.lastname, {'attr': {'class': 'form-control', 'id': 'lastname', 'required': true}}) }}
                                            {{ form_errors(form.lastname) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="mb-3">
                                            <label for="phone" class="form-label">{{ form_label(form.phone) }}</label>
                                            {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'id': 'phone', 'required': true}}) }}
                                            {{ form_errors(form.phone) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="mb-3">
                                            <label for="email" class="form-label">{{ form_label(form.email) }}</label>
                                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'id': 'email', 'type': 'email', 'required': true}}) }}
                                            {{ form_errors(form.email, {'attr': {'class': 'text-danger'}}) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="mb-3">
                                            <label for="pincode" class="form-label">{{ form_label(form.pincode) }}</label>
                                            {{ form_widget(form.pincode, {'attr': {'class': 'form-control', 'id': 'pincode', 'required': true}}) }}
                                            {{ form_errors(form.pincode) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="mb-3">
                                            <label for="pincode" class="form-label">{{ form_label(form.product) }}</label>
                                            {{ form_widget(form.product, {'attr': {'class': 'form-control', 'id': 'product', 'required': true}}) }}
                                            {{ form_errors(form.product) }}
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12">
                                        <div class="mb-3">
                                            <label for="requirement" class="form-label">{{ form_label(form.requirement) }}</label>
                                            {{ form_widget(form.requirement, {'attr': {'class': 'form-control', 'id': 'requirement', 'required': true}}) }}
                                            {{ form_errors(form.requirement) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>

                                {{ form_end(form) }}
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
