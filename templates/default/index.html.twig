{% extends 'base.html.twig' %}

{% block title %}Home - Namadeva Steels{% endblock %}

{% block body %}
<div class="">
    <section class="hero">
        <div id="carouselExampleCaptions" class="carousel slide">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="{{ asset('images/carousel/carousel1.jpeg') }}" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 class="animate__animated animate__backInDown">First slide label</h5>
                        <p class="animate__animated animate__backInDown">Some representative placeholder content for the first slide.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('images/carousel/carousel2.jpeg') }}" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Second slide label</h5>
                        <p>Some representative placeholder content for the second slide.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('images/carousel/carousel3.jpeg') }}" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Third slide label</h5>
                        <p>Some representative placeholder content for the third slide.</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </section>

    <section class="container educate py-4">
        <div class="text-center">
            <h2 class="text-primary">Lorem Ipsum</h2>
            <p class="m-0 text-secondary">Build a strongest tomorrow with generations of expertise.</p>
        </div>
    </section>

    <section class="brands py-4">
        <div class="text-center">
            <h2 class="text-primary">Brands we deal</h2>
        </div>
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
                <div class="swiper-slide"><img src="{{ asset('images/brands/bhushan.png') }}" alt="bhushan" /> </div>
                <div class="swiper-slide"><img src="{{ asset('images/brands/essar.png') }}" alt="essar" /> </div>
                <div class="swiper-slide"><img src="{{ asset('images/brands/jindal.jpeg') }}" alt="jindal" /> </div>
                <div class="swiper-slide"><img src="{{ asset('images/brands/shyam.png') }}" alt="shyam" /> </div>
                <div class="swiper-slide"><img src="{{ asset('images/brands/jsw.png') }}" alt="jsw" /> </div>
                <div class="swiper-slide"><img src="{{ asset('images/brands/sail.png') }}" alt="sail" /> </div>
                <div class="swiper-slide"><img src="{{ asset('images/brands/tata-steel.png') }}" alt="tata-steel" /> </div>
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </section>

    <section class="products py-4">
        <div class="text-center">
            <h2 class="text-primary">Our Products</h2>
            <p>Durable structural solutions that ensure reliability and quality for every project</p>
        </div>

        <div class="container">
            <div class="d-flex justify-content-center align-items-center gap-3 flex-wrap flex-sm-nowrap">
                {% for product in products %}
                    <div class="image-container">
                        <img src="{{ asset('uploads/product') }}/{{ product.productMedia[0].image }}" alt="{{ product.productMedia[0].image }}">
                        <div class="overlay">
                            <h4>{{ product.name }}</h4>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <section class="products py-4">
        <div class="text-center">
            <h2 class="text-primary">Our Services</h2>
            <p>Durable structural solutions that ensure reliability and quality for every project</p>
        </div>

        <div class="container">
            <div class="d-flex justify-content-center align-items-center gap-3 flex-wrap flex-sm-nowrap">
                {% for product in products %}
                    <div class="image-container">
                        <img src="{{ asset('uploads/product') }}/{{ product.productMedia[0].image }}" alt="{{ product.productMedia[0].image }}">
                        <div class="overlay">
                            <h4>{{ product.name }}</h4>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <section class="testimonials py-4">
        <div class="text-center">
            <h2 class="text-primary">Testimonials</h2>
            <p class="text-seconday">Our Happy Clients</p>
        </div>
        <div class="container">
            <div class="swiper testimonial-swiper">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <div class="client-testimonials">
                            <h5 class="text-center text-primary m-0">"Namadeva's steel products are robust and reliable, perfect for our construction needs."</h5>
                            <p class="text-end me-5 text-secondary">-Nitin</p>
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="client-testimonials">
                            <h5 class="text-center text-primary m-0">"The fabrication service from Namadeva was impeccable, delivering exactly what we needed on time."</h5>
                            <p class="text-end me-5 text-secondary">-Jessica</p>
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="client-testimonials">
                            <h5 class="text-center text-primary m-0">"We love the vibrant roofing sheets from Namadeva; they've transformed our building's look and durability."</h5>
                            <p class="text-end me-5 text-secondary">-Alen</p>
                        </div>
                    </div>

                </div>
                <div class="swiper-pagination"></div>
            </div>
        </div>

    </section>

    <section class="brands py-4">
        <div class="text-center">
            <h2 class="text-primary">Our Clients</h2>
        </div>
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
                <div class="swiper-slide"><img src="{{ asset('images/brands/bhushan.png') }}" alt="bhushan" /> </div>
                <div class="swiper-slide"><img src="{{ asset('images/brands/essar.png') }}" alt="essar" /> </div>
                <div class="swiper-slide"><img src="{{ asset('images/brands/jindal.jpeg') }}" alt="jindal" /> </div>
                <div class="swiper-slide"><img src="{{ asset('images/brands/shyam.png') }}" alt="shyam" /> </div>
                <div class="swiper-slide"><img src="{{ asset('images/brands/jsw.png') }}" alt="jsw" /> </div>
                <div class="swiper-slide"><img src="{{ asset('images/brands/sail.png') }}" alt="sail" /> </div>
                <div class="swiper-slide"><img src="{{ asset('images/brands/tata-steel.png') }}" alt="tata-steel" /> </div>
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </section>

</div>
{% endblock %}
