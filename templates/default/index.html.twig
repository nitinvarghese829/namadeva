    <section class="products py-4 content">
        <div class="text-center">
            <h2 class="text-primary">Our Products</h2>
            <p>Durable structural solutions that ensure reliability and quality for every project</p>
        </div>

        <div class="container">
            <div class="d-flex justify-content-center align-items-center gap-3 flex-wrap flex-sm-nowrap">
                {% for product in products %}
                    <a href="{{ path('app_product_detail', {'slug': product.slug}) }}">
                        <div  itemscope itemtype="https://schema.org/Product" class="image-container">
                            <img itemprop="image" src="{{ asset('uploads/product') }}/{{ product.productMedia[0].image }}" alt="{{ product.productMedia[0].image }}">
                            <div class="overlay">
                                <h4 itemprop="name">{{ product.name }}</h4>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>

            <div class="d-flex justify-content-center align-items-center py-2">
                <a class="btn bg-body-tertiary text-primary btn-lg w-200 m-0  text-uppercase fw-bold rounded-pill" href="{{ path('app_product_index') }}">View all</a>
