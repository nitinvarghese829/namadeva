{% extends 'base.html.twig' %}

{% block title %}{{ page.title }}{% endblock %}
{% block meta_description %}{{ page.description }}{% endblock %}
{% block meta_keywords %}{{ page.keyword }}{% endblock %}

{% block body %}
    <section class="page-title py-4">
        <div class="text-center animate__animated  animate__fadeInDown">
            <h2 class="text-primary mb-3">Blog</h2>
        </div>
        <div class="text-center container animate__animated  animate__fadeInDown">
            <p class="text-secondary m-0">A blog is a regularly updated online platform where individuals or organizations share articles, insights, or personal reflections on specific topics of interest. It serves as a dynamic medium for expressing ideas, engaging with audiences, and fostering community interaction.</p>
        </div>
    </section>

    <section class="blog">
        <div class="blog-single gray-bg">
            <div class="container">
                <div class="row align-items-start">
                    <div class="col-lg-8">
                        <article class="article">
                            <div class="article-img">
                                <img src="{{ asset('uploads/blogs/') }}{{ blog.blogsMedia[0].image }}" title="" alt="">
                            </div>
                            <div class="article-title">
                                <h6><a href="#">Lifestyle</a></h6>
                                <h2 class="text-secondary">{{ blog.name }}</h2>
                                <div class="media">
                                    <div class="avatar">
                                        <img src="https://bootdey.com/img/Content/avatar/avatar1.png" title="" alt="">
                                    </div>
                                    <div class="media-body">
                                        <label>Rachel Roth</label>
                                        <span>{{ blog.createdAt | date('jS M, y') }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="article-content">
                                <div>{{ blog.description | raw }}</div>
                            </div>
                        </article>

                    </div>
                    <div class="col-lg-4 m-15px-tb blog-aside">
                        
                        <!-- Trending Post -->
                        <div class="widget widget-post">
                            <div class="widget-title">
                                <h3 class="text-primary">Trending Now</h3>
                            </div>
                            <div class="widget-body">
                                {% for randomBlog in randomBlogs  %}
                                    <div class="latest-post-aside media">
                                        <div class="lpa-left media-body">
                                            <div class="lpa-title">
                                                <h5><a href="{{ path('app_knowledge_hub_blogs_blog', {'slug' : randomBlog.slug}) }}">{{ randomBlog.name }}</a></h5>
                                            </div>
                                            <div class="lpa-meta">
                                                <a class="name" href="#">
                                                    Rachel Roth
                                                </a>
                                                <a class="date" href="#">
                                                    {{ randomBlog.createdAt | date('jS M, y') }}
                                                </a>
                                            </div>
                                        </div>
                                        <div class="lpa-right">
                                            <a href="{{ path('app_knowledge_hub_blogs_blog', {'slug' : randomBlog.slug}) }}">
                                                <img src="{{ asset('uploads/blogs/') }}{{ randomBlog.blogsMedia[0].image }}" title="" alt="">
                                            </a>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <!-- End Trending Post -->
                        <!-- Latest Post -->
                        <div class="widget widget-latest-post">
                            <div class="widget-title">
                                <h3 class="text-primary">Latest Post</h3>
                            </div>
                            <div class="widget-body">
                                {% for randomBlog in randomBlogs  %}
                                <div class="latest-post-aside media">
                                    <div class="lpa-left media-body">
                                        <div class="lpa-title">
                                            <h5><a href="{{ path('app_knowledge_hub_blogs_blog', {'slug' : randomBlog.slug}) }}">{{ randomBlog.name }}</a></h5>
                                        </div>
                                        <div class="lpa-meta">
                                            <a class="name" href="#">
                                                Rachel Roth
                                            </a>
                                            <a class="date" href="#">
                                                {{ randomBlog.createdAt | date('jS M, y') }}
                                            </a>
                                        </div>
                                    </div>
                                    <div class="lpa-right">
                                        <a href="{{ path('app_knowledge_hub_blogs_blog', {'slug' : randomBlog.slug}) }}">
                                            <img src="{{ asset('uploads/blogs/') }}{{ randomBlog.blogsMedia[0].image }}" title="" alt="">
                                        </a>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
